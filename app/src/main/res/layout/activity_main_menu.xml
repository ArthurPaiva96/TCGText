<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainMenuActivity">

    <Button
        android:id="@+id/activity_main_menu_pokemontcg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_menu_pokemontcg_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_menu_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_menu_settings"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/activity_main_menu_pokemontcg"
        app:layout_constraintStart_toStartOf="@id/activity_main_menu_pokemontcg"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_pokemontcg" />
</androidx.constraintlayout.widget.ConstraintLayout>