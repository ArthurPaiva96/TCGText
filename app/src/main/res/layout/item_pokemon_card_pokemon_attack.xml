<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/item_pokemon_card_pokemon_attack_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Fogo/Incolor/Incolor" />

            <TextView
                android:id="@+id/item_pokemon_card_pokemon_attack_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/item_pokemon_card_pokemon_attack_damage"
                app:layout_constraintStart_toEndOf="@id/item_pokemon_card_pokemon_attack_cost"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Fire Stream" />

            <TextView
                android:id="@+id/item_pokemon_card_pokemon_attack_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_pokemon_card_pokemon_attack_name"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="50" />

            <TextView
                android:id="@+id/item_pokemon_card_pokemon_attack_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_pokemon_card_pokemon_attack_name"
                tools:text="Descarte um card de Energia de Fogo anexado a Blaziken. Se você fizer isso, este ataque causará 10 de dano a cada um dos Pokémon de Banco de seu oponente. (Não aplique Fraqueza e Resistência para Pokémon de Banco.)" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>